{
  "name": "synytskiy/laravel-kendo-ui",
  "description": "",
  "authors": [
    {
      "name": "Oleksa Synytskiy",
      "email": "alexsynytskiy@gmail.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "require": {
    "php": ">=5.3.0"
  },
  "autoload": {
    "files": ["wrappers/php/lib/Kendo/Autoload.php"],
    "psr-0": {
      "Kendo\\": "wrappers/php/lib/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize",
      "php artisan asset:publish --bench='vendor/synytskiy/'"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize",
      "php artisan asset:publish --bench='vendor/synytskiy/'"
    ]
  }
}